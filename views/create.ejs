<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Create a blogpost</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
	</head>
	<body>
		<div class="fluid-container">
			<div class="row">
				<div class="col-3"></div>
				<div class="col-6">
					<form action="new" method="get">
						<fieldset class="form-group">
							<legend>Blogpost</legend>
							
								<div class="form-group">
									<label for="title">Title<label>
									<input name="title"class="form-control" type="text" maxlength="100" required>
								</div>
								<div class="form-group">
									<label for="text">Text<label><br>
									<textarea name="text" rows="3" cols="100" class="form-control" required></textarea>
								</div>
								<% if(username !== undefined) { %>
								<input type="text" name="username" hidden value="<%= username %>">
								<% } %>		
								<div class="form-group">
									
									<input class="form-control" type="submit">
								</div>
								
						
						</fieldset>
					
					</form>
				
				</div>
				<div class="col-3">
					<% if(username !== undefined) { %>
					<h1>Hello <%= username%>!</h1>
					<% } %>
					
					<% if(username !== undefined) {%>
					
					<form method="post" action="/viewAllPosts">						
						<input type="text" name="username" hidden value="<%= username %>">
						<button type="submit" class="btn-lg btn-link">Home</button>
					</form>
					
					<% }else { %>
						<form method="post" action="/">		
							<button type="submit" class="btn-lg btn-link">Home</button>
						</form>
					<% } %>
				</div>
			</div>
			
		
		</div>
	</body>
</html>